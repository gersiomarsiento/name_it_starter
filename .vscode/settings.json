{
  "editor.tabSize": 2,
  "editor.formatOnSave": false,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "prettier.printWidth": 120,
  "prettier.quoteProps": "preserve",
  "[liquid]": {
    "editor.tabSize": 2,
    "editor.defaultFormatter": "Shopify.theme-check-vscode",
    "editor.formatOnSave": true
  },
  "[scss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2,
    "editor.formatOnSave": true
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2,
    "editor.formatOnSave": true
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2,
    "editor.formatOnSave": true
  },
  "[json]": {
    "editor.tabSize": 2
  },
  "[html]": {
    "editor.tabSize": 2,
    "editor.formatOnSave": true
  },
  "css.customData": [".vscode/tailwind.json"],
  "files.associations": {
    "*.min.*": "plaintext",
    "*.css": "tailwindcss",
    "*.scss": "tailwindcss"
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/tmp": true,
    "**/assets/bundle.*css": true,
    "**/assets/bundle.*js": true,
    "**/assets/main.js": true,
    "**/assets/main.js.map": true,
    "**/assets/main.css": true,
    "**/*.svg": true
  },
  "conventionalCommits.scopes": [
    "Global",
    "Homepage",
    "PLP",
    "PDP",
    "Cart",
    "Checkout",
    "Header",
    "Footer",
    "Accessibility",
    "Performance",
    "Analytics",
    "SEO",
    "Bundles",
    "Upsells",
    "Megamenu",
    "Filters",
    "Sorters",
    "Search"
  ]
}
