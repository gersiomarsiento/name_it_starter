<div id="AddAddress" class="p-8">
  <h2 class="h2 text-center" id="AddressNewHeading">{{ 'customer.addresses.add_new' | t }}</h2>

  {%- form 'customer_address',
    customer.new_address,
    aria-labelledBy: 'AddressNewHeading',
    class: 'flex flex-col gap-y-4'
  -%}
    <div class="flex flex-col gap-y-1">
      <label class="form__label" for="AddressFirstNameNew">{{ 'customer.addresses.first_name' | t }}</label>
      <input
        type="text"
        id="AddressFirstNameNew"
        class="form__input"
        name="address[first_name]"
        value="{{ form.first_name }}"
        autocomplete="given-name"
        placeholder="{{ 'customer.addresses.first_name' | t }}"
      >
    </div>

    <div class="flex flex-col gap-y-1">
      <label class="form__label" for="AddressLastNameNew">{{ 'customer.addresses.last_name' | t }}</label>
      <input
        type="text"
        id="AddressLastNameNew"
        class="form__input"
        name="address[last_name]"
        value="{{ form.last_name }}"
        autocomplete="family-name"
        placeholder="{{ 'customer.addresses.last_name' | t }}"
      >
    </div>

    <div class="flex flex-col gap-y-1">
      <label class="form__label" for="AddressCompanyNew">{{ 'customer.addresses.company' | t }}</label>
      <input
        type="text"
        id="AddressCompanyNew"
        class="form__input"
        name="address[company]"
        value="{{ form.company }}"
        autocomplete="organization"
        placeholder="{{ 'customer.addresses.company' | t }}"
      >
    </div>

    <div class="flex flex-col gap-y-1">
      <label class="form__label" for="AddressAddress1New">{{ 'customer.addresses.address1' | t }}</label>
      <input
        type="text"
        id="AddressAddress1New"
        class="form__input"
        name="address[address1]"
        value="{{ form.address1 }}"
        autocomplete="address-line1"
        placeholder="{{ 'customer.addresses.address1' | t }}"
      >
    </div>

    <div class="flex flex-col gap-y-1">
      <label class="form__label" for="AddressAddress2New">{{ 'customer.addresses.address2' | t }}</label>
      <input
        type="text"
        id="AddressAddress2New"
        class="form__input"
        name="address[address2]"
        value="{{ form.address2 }}"
        autocomplete="address-line2"
        placeholder="{{ 'customer.addresses.address2' | t }}"
      >
    </div>

    <div class="flex flex-col gap-y-1">
      <label class="form__label" for="AddressCityNew">{{ 'customer.addresses.city' | t }}</label>
      <input
        type="text"
        id="AddressCityNew"
        class="form__input"
        name="address[city]"
        value="{{ form.city }}"
        autocomplete="address-level2"
        placeholder="{{ 'customer.addresses.city' | t }}"
      >
    </div>

    <div class="flex flex-col gap-y-1">
      <label class="form__label" for="AddressCountryNew">{{ 'customer.addresses.country' | t }}</label>
      <select
        id="AddressCountryNew"
        class="form__input"
        name="address[country]"
        data-default="{{ form.country }}"
        autocomplete="country"
      >
        {{- all_country_option_tags -}}
      </select>
    </div>

    <div class="flex flex-col gap-y-1" id="AddressProvinceContainerNew" style="display: none">
      <label class="form__label" for="AddressProvinceNew">{{ 'customer.addresses.province' | t }}</label>
      <select
        id="AddressProvinceNew"
        class="form__input"
        name="address[province]"
        data-default="{{ form.province }}"
        autocomplete="address-level1"
      ></select>
    </div>

    <div class="flex flex-col gap-y-1">
      <label class="form__label" for="AddressZipNew">{{ 'customer.addresses.zip' | t }}</label>
      <input
        type="text"
        id="AddressZipNew"
        class="form__input"
        name="address[zip]"
        value="{{ form.zip }}"
        autocapitalize="characters"
        autocomplete="postal-code"
        placeholder="{{ 'customer.addresses.zip' | t }}"
      >
    </div>

    <div class="flex flex-col gap-y-1">
      <label class="form__label" for="AddressPhoneNew">{{ 'customer.addresses.phone' | t }}</label>
      <input
        type="tel"
        id="AddressPhoneNew"
        class="form__input"
        name="address[phone]"
        value="{{ form.phone }}"
        autocomplete="tel"
        placeholder="{{ 'customer.addresses.phone' | t }}"
      >
    </div>

    <div class="flex flex-row gap-2 items-center">
      {{ form.set_as_default_checkbox }}
      <label for="address_default_address_new">{{ 'customer.addresses.set_default' | t }}</label>
    </div>

    <div class="flex flex-row justify-center gap-5">
      <button type="submit" class="button-primary">{{ 'customer.addresses.add' | t }}</button>
      <button type="reset" class="button-secondary" @click="closeModal()">{{ 'customer.addresses.cancel' | t }}</button>
    </div>
  {%- endform -%}
</div>
