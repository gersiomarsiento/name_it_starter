<div
  class="flex items-center lg:hidden"
  x-data="
    {
      drawerIsOpen: false,
      toggleDrawer() {
        this.drawerIsOpen = !this.drawerIsOpen;
        document.body.classList.toggle('overflow-hidden', this.drawerIsOpen);
      },
      closeDrawer() {
        if (!this.drawerIsOpen) return;
        this.drawerIsOpen = false;
        document.body.classList.remove('overflow-hidden');
      }
    }
  "
  x-on:click.outside="closeDrawer()"
>
  <button
    type="button"
    aria-label="{{ 'sections.header.menu' | t }}"
    x-on:click="toggleDrawer()"
    :aria-expanded="drawerIsOpen"
  >
    <span x-show="!drawerIsOpen">
      {%- render 'icon-hamburger', class: 'w-6' -%}
    </span>

    <span x-show="drawerIsOpen" style="display: none;">
      {%- render 'icon-close', class: 'w-6' -%}
    </span>
  </button>

  <div
    class="w-full transition-transform -translate-x-full absolute top-full left-0 md:max-w-[420px] z-[3] overflow-x-hidden gradient color-{{ section.settings.menu_color_scheme }}"
    :class="
      {
        'translate-x-0': drawerIsOpen,
        '-translate-x-full': !drawerIsOpen
      }
    "
    style="height: calc(var(--viewport-height) - var(--header-bottom-position));"
    x-trap="drawerIsOpen"
  >
    <div class="relative h-full grid grid-rows-[1fr_auto] overflow-x-hidden">
      <div class="overflow-y-auto pt-5">
        <nav class="w-full">
          <ul class="flex flex-col" role="list">
            {%- for link in section.settings.menu.links -%}
              {%- assign mainLinkIndex = forloop.index -%}
              {%- assign megaMenuBlock = blank -%}
              {%- assign megaMenublocks = section.blocks | where: 'type', 'mega-menu' -%}
              {%- for block in megaMenublocks -%}
                {%- if block.settings.index == mainLinkIndex -%}
                  {%- assign megaMenuBlock = block -%}
                  {%- break -%}
                {%- endif -%}
              {%- endfor -%}

              <li>
                {%- if link.links != blank or megaMenuBlock != blank -%}
                  {%- render 'header-drawer-submenu-1', link: link, megaMenuBlock: megaMenuBlock -%}
                {%- else -%}
                  <a
                    href="{{ link.url }}"
                    class="flex px-8 py-4 body-2"
                    {% if link.current %}
                      aria-current="page"
                    {% endif %}
                  >
                    {{- link.title | escape -}}
                  </a>
                {%- endif -%}
              </li>
            {%- endfor -%}
          </ul>
        </nav>
      </div>

      <div
        class="w-full flex flex-col gap-y-5 p-5"
        style="background-color: rgba(var(--color-foreground), .03);"
      >
        {%- if shop.customer_accounts_enabled -%}
          <a
            href="{%- if customer -%}{{ routes.account_url }}{%- else -%}{{ routes.account_login_url }}{%- endif -%}"
            class="flex flex-row items-center gap-3 w-max"
          >
            {%- render 'icon-account', class: 'w-4' -%}
            <span>
              {%- if customer -%}
                {{- 'customer.account_fallback' | t }}
              {%- else -%}
                {{- 'customer.log_in' | t }}
              {%- endif -%}
            </span>
          </a>
        {%- endif -%}

        {%- if localization.available_countries or localization.available_languages -%}
          <div class="flex flex-row gap-4">
            {%- if localization.available_countries and localization.available_countries.size > 1 -%}
              {%- render 'country-selector', localPosition: 'AnnouncementCountry' -%}
            {% endif %}

            {%- if localization.available_languages and localization.available_languages.size > 1 -%}
              {%- render 'language-selector', localPosition: 'AnnouncementLanguageForm' -%}
            {%- endif -%}
          </div>
        {%- endif -%}

        {%- render 'social-icons' -%}
      </div>
    </div>
  </div>
</div>
