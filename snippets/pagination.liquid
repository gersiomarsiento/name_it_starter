{% comment %}
  Accepts:
  - paginate: {Object}
  - anchor: {String} (optional) This can be added so that on page reload it takes you to wherever you've placed your anchor tag.
  - class: {String} (optional) Additional classes to add to the pagination container.
{% endcomment %}

{%- assign class = class | default: '' -%}
{%- assign paginate = paginate | default: blank -%}
{%- assign anchor = anchor | default: blank -%}

{%- if paginate.parts.size > 0 -%}
  <nav
    class="w-full {{ class }}"
    role="navigation"
    aria-label="{{ 'general.pagination.label' | t }}"
  >
    <ul
      class="w-full flex flex-row flex-wrap justify-center items-center gap-5 md:gap-6"
      role="list"
    >
      {%- if paginate.previous -%}
        <li>
          <a
            href="{{ paginate.previous.url }}{{ anchor }}"
            class="flex p-2"
            aria-label="{{ 'general.pagination.previous' | t }}"
          >
            {%- render 'icon-caret', class: 'w-4 rotate-90' -%}
          </a>
        </li>
      {%- endif -%}

      {%- for part in paginate.parts -%}
        <li>
          {%- if part.is_link -%}
            <a
              href="{{ part.url }}{{ anchor }}"
              class="flex p-2 hover:underline underline-offset-8"
              aria-label="{{ 'general.pagination.page' | t: number: part.title }}"
            >
              {{- part.title -}}
            </a>
          {%- else -%}
            {%- if part.title == paginate.current_page -%}
              <a
                role="link"
                aria-disabled="true"
                class="flex p-2 font-semibold"
                aria-current="page"
                aria-label="{{ 'general.pagination.page' | t: number: part.title }}"
              >
                {{- part.title -}}
              </a>
            {%- else -%}
              <span>{{ part.title }}</span>
            {%- endif -%}
          {%- endif -%}
        </li>
      {%- endfor -%}

      {%- if paginate.next -%}
        <li>
          <a
            href="{{ paginate.next.url }}{{ anchor }}"
            class="p-2"
            aria-label="{{ 'general.pagination.next' | t }}"
          >
            {%- render 'icon-caret', class: 'w-4 -rotate-90' -%}
          </a>
        </li>
      {%- endif -%}
    </ul>
  </nav>
{%- endif -%}
