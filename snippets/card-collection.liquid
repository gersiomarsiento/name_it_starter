{%- if card_collection != blank -%}
  <div class="flex flex-col w-full h-full rounded-[15px] border border-gray-300 border-opacity-80 relative overflow-hidden">
    <a
      class="w-full pb-[100%] relative group overflow-hidden bg-gray-200/50"
      href="{{ card_collection.url }}"
      tabindex="-1"
    >
      {%- if card_collection.featured_image -%}
        {%- render 'image-element',
          image: card_collection.featured_image,
          max_width: 800,
          class: 'absolute inset-0 w-full h-full object-center object-cover',
          priority: priority
        -%}
      {%- endif -%}
    </a>

    <a
      href="{{ card_collection.url }}"
      class="animate-arrow flex flex-row justify-between gap-3 items-center h5 p-3 md:p-5"
    >
      <span>{{- card_collection.title | escape -}}</span>
      {%- render 'icon-arrow', class: 'w-4 shrink-0' -%}
    </a>
  </div>
{%- endif -%}
