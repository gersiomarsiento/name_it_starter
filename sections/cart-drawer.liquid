<script id="lf-ajax-cart-drawer-json" type="application/json">
  {{ cart | json }}
</script>

<section
  id="lf-cart-drawer"
  class="lf-cart-drawer overflow-hidden"
  role="dialog"
  aria-label="Cart Drawer"
  aria-modal="true"
>
  <div class="flex flex-col gap-y-5 h-full gradient color-{{ settings.cart_color_scheme }}">
    {%- render 'cart-drawer-header' -%}

    <div
      id="lf-cart-drawer-items"
      class="w-full px-5 flex-1 overflow-y-auto"
    >
      {%- render 'cart-drawer-items' -%}
    </div>

    {%- render 'cart-drawer-footer' -%}
  </div>
</section>

<div class="lf-cart-drawer-overlay"></div>

{% schema %}
{
  "name": "Cart Drawer",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "My Cart"
    }
  ]
}
{% endschema %}
