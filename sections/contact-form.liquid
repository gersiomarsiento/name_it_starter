<section
  role="region"
  aria-label="{{ section.settings.heading }}"
  class="w-full py-8 lg:py-12 color-{{ section.settings.color_scheme }} gradient"
>
  <div class="c-container flex flex-col gap-y-8">
    {%- if section.settings.heading != blank -%}
      <h2 class="h2">
        {{- section.settings.heading -}}
      </h2>
    {%- endif -%}

    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      {%- form 'contact', id: 'ContactForm', class: 'col-span-1 flex flex-col gap-y-4' -%}
        {%- if form.posted_successfully? -%}
          <div
            class="richtext text-green-700 text-center body-2 flex flex-row items-center gap-1"
            tabindex="-1"
            autofocus
          >
            {%- render 'icon-success', class: 'w-4 inline-block' -%}
            {{- 'templates.contact.form.post_success' | t }}
          </div>
        {%- elsif form.errors -%}
          <div class="richtext text-error body-3">
            <div class="flex flex-row items-center gap-1" role="alert" tabindex="-1" autofocus>
              {%- render 'icon-error', class: 'w-4' -%}
              <span>{{ 'templates.contact.form.error_heading' | t }}</span>
            </div>
            <ul class="flex flex-col gap-y-3" role="list">
              <li>
                <a href="#ContactForm-email" class="link">
                  {{ form.errors.translated_fields.email | capitalize }}
                  {{ form.errors.messages.email }}
                </a>
              </li>
            </ul>
          </div>
        {%- endif -%}
        <div class="flex flex-col gap-y-1">
          <label class="form__label" for="ContactForm-name">{{ 'templates.contact.form.name' | t }}</label>
          <input
            class="form__input"
            autocomplete="name"
            type="text"
            id="ContactForm-name"
            class="form__input"
            name="contact[{{ 'templates.contact.form.name' | t }}]"
            value="{% if form.name %}{{ form.name }}{% elsif customer %}{{ customer.name }}{% endif %}"
            placeholder="{{ 'templates.contact.form.name' | t }}"
          >
        </div>
        <div class="flex flex-col gap-y-1">
          <label class="form__label" for="ContactForm-email">
            {{- 'templates.contact.form.email' | t }}
            <span aria-hidden="true">*</span>
          </label>
          <input
            autocomplete="email"
            type="email"
            id="ContactForm-email"
            class="form__input"
            name="contact[email]"
            spellcheck="false"
            autocapitalize="off"
            value="{% if form.email %}{{ form.email }}{% elsif customer %}{{ customer.email }}{% endif %}"
            aria-required="true"
            {% if form.errors contains 'email' %}
              aria-invalid="true"
              aria-describedby="ContactForm-email-error"
            {% endif %}
            placeholder="{{ 'templates.contact.form.email' | t }}"
          >
          {%- if form.errors contains 'email' -%}
            <div class="text-error body-5 richtext flex flex-row items-center gap-1" id="ContactForm-email-error">
              {%- render 'icon-error', class: 'w-4' -%}
              <span>
                {{ form.errors.translated_fields.email | capitalize }}
                {{ form.errors.messages.email -}}
              </span>
            </div>
          {%- endif -%}
        </div>
        <div class="flex flex-col gap-y-1">
          <label class="form__label" for="ContactForm-phone">{{ 'templates.contact.form.phone' | t }}</label>
          <input
            type="tel"
            id="ContactForm-phone"
            class="form__input"
            autocomplete="tel"
            name="contact[{{ 'templates.contact.form.phone' | t }}]"
            pattern="[0-9\-]*"
            value="{% if form.phone %}{{ form.phone }}{% elsif customer %}{{ customer.phone }}{% endif %}"
            placeholder="{{ 'templates.contact.form.phone' | t }}"
          >
        </div>
        <div class="flex flex-col gap-y-1">
          <label class="form__label form__label" for="ContactForm-body">
            {{- 'templates.contact.form.comment' | t -}}
          </label>
          <textarea
            rows="10"
            id="ContactForm-body"
            class="form__input"
            name="contact[{{ 'templates.contact.form.comment' | t }}]"
            placeholder="{{ 'templates.contact.form.comment' | t }}"
          >
            {{- form.body -}}
          </textarea>
        </div>
        <button type="submit" class="button-primary">
          {{- 'templates.contact.form.send' | t -}}
        </button>
      {%- endform -%}

      <div class="col-span1 border border-gray-200 rounded-[15px] overflow-hidden bg-gray-200">
        {%- if section.settings.image != blank -%}
          {%- render 'image-element',
            image: section.settings.image,
            max_width: 1200,
            class: 'w-full md:h-full md:object-center md:object-cover'
          -%}
        {%- endif -%}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Contact Form",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "inline_richtext",
      "id": "heading",
      "default": "Contact form",
      "label": "Heading"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    }
  ],
  "presets": [
    {
      "name": "Contact Form"
    }
  ]
}
{% endschema %}
